rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to upload receipts (for checkout)
    // Receipts are stored in receipts/ folder
    match /receipts/{receiptId} {
      allow read: if true; // Admins need to view receipts
      allow write: if request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Product images and other uploads - admin only
    match /{allPaths=**} {
      allow read: if true; // Public read for product images
      allow write: if request.auth != null; // Authenticated users can upload
    }
  }
}
